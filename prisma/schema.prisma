generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  surname      String
  email        String    @unique
  phoneNumber  String?
  password     String
  createdAt    DateTime  @default(now())

  resetToken       String?
  resetTokenExpiry DateTime?

  favoriteProducts String[]
}

model Product {
  isBestSeller Boolean
  isActive     Boolean
  id           String   @map("_id") @id @default(auto()) @db.ObjectId
  title        String
  slug         String               @unique
  category     String

  images       String[]
  inStock      Boolean              @default(true)

  specs        Spec[]   @relation("ProductSpecs")
  options      Option[] @relation("ProductOptions")

  createdAt    DateTime             @default(now())

}

model Spec {
  id        String  @map("_id") @id @default(auto()) @db.ObjectId

  productId String              @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], name: "ProductSpecs", onDelete: Cascade)

  key       String
  value     String
  group     String

  @@index([group])
  @@index([group, value])
}


model Option {
  id        String  @map("_id") @id @default(auto()) @db.ObjectId

  productId String              @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], name: "ProductOptions", onDelete: Cascade)

  label     String
  value     String?
  price     Float
  discount  Float?

  quantity  Float?

  isMain    Boolean             @default(false)
  inStock   Boolean             @default(true)
}

